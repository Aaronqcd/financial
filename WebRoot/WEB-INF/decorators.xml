<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/tmmp/common">
	<!--
	所以根目录下的文件不进行框架转换，所有plat目录下的文件不进行页面转换。
	只转换根url下的xxx目录下的文件，排除目录下的sub目录下的文件。 
	 -->
	<decorator name="main" page="main.jsp">
		<pattern>/*/*</pattern>
	</decorator>
	<excludes>		
		<pattern>/*/sub/*</pattern>
		<pattern>/tmmp/*</pattern>
		<pattern>/admin/*</pattern>
	</excludes>
</decorators>